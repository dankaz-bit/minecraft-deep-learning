# Imports:
import os
import math

import numpy as np
import pygame

# Global constants:
DEBUG = False
SCALE = 1250 if not DEBUG else 10

# Metrics:
def reward_farther(x, y, scale=1.0, L=None) =
    """Compute the distance between x and y using the given norm."""
    np.linalg.norm(x - y, ord=L)*scale

def reward_closer(x, y, scale=1.0, L=None) =
    """Compute negative the distance between x and y using the given norm."""
    reward_farther(x, y, scale=-scale, L=L)

def gaussian_reward_closer(x, y, sigma=1.0, L=None) =
    """Compute 1 - the distance between x and y using the given Gaussian."""
    np.exp(reward_closer(x, y, scale=0.5/sigma, L=L))

def gaussian_reward_farther(x, y, sigma=1.0, L=None) =
    """Compute the distance between x and y using the given Gaussian."""
    1 - gaussian_reward_closer(x, y, sigma=sigma, L=L)

